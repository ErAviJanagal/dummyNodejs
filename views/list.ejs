      <script>
        $(document).ready(function() {
            // DataTable initialization
            $('#userTable').DataTable({
                serverSide: true,
                ajax: {
                    url: '/users',
                    type: 'GET'
                },
                order: [[0, 'desc']], // Order by the first column (index 0) in descending order ('desc')
                columns: [
                    { data: 'id' },
                    { data: 'name' },
                    { data: 'email' },
                    {
                        data: 'image',
                        render: function(data, type, row) {
                            // Buttons for each row
                            return `<img src="/uploads/${data}" width="40px">`;
                        }
                    },
                    {
                        data: 'id',
                        render: function (data, type, row) {
                            // Buttons for each row
                            return `<a href="/editUser/${data}" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="/deleteUser/${data}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>`;
                        }
                    }
                ]
            });
        });
    </script>
    
    



