          <% } %>
            <!-- Form for adding new users -->
            <div class="card shadow mb-4">
          
              <% if (type == 1) { %>
                <form id="userForm" action="/addUser" method="POST" enctype="multipart/form-data" class="p-3">
              <% } else { %>
                <form id="userForm" action="/updateUser/<%= user.id %>" method="POST" enctype="multipart/form-data" class="p-3">
              <% } %>
                <div class="form-group">
                  <label for="name">Name:</label>
                  <input type="text" id="name" name="name" value="<%= type == 2 ? user.name : '' %>" class="form-control" required>
