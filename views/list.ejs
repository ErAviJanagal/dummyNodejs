                <div class="form-group">
                  <label for="email">Email:</label>
                  <input type="email" id="email" name="email" value="<%= type == 2 ? user.email : '' %>" class="form-control" required>
                </div>
                
                <div class="form-group">
                  <label for="image">Image:</label>
                  <input type="file" id="image" name="image" class="form-control-file" <%= type == 1 ? 'required' : '' %>>
